# Application Configuration
SECRET_KEY=dev-secret-key-change-in-production
DEBUG=True
PORT=5000
HOST=127.0.0.1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGO_DB_NAME=sustainatrend
USE_MOCK_MONGODB=False

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Security Configuration
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# MongoDB Configuration
MONGODB_DATABASE=sustainatrend

# Flask Configuration
FLASK_ENV=development
FLASK_APP=src/frontend/refactored/app.py
FLASK_DEBUG=1

# API Keys
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CSE_ID=your-google-cse-id
OPENAI_API_KEY=your-openai-api-key

# Vector Database Configuration
VECTOR_DB_PATH=./vector_db
VECTOR_DB_COLLECTION=sustainatrend_collection

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# MongoDB Atlas Credentials
# Replace these values with your actual credentials
MONGODB_USERNAME=your_username
MONGODB_PASSWORD=your_password

# Session Configuration
SESSION_TYPE=filesystem
SESSION_PERMANENT=False
PERMANENT_SESSION_LIFETIME=3600

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
BCRYPT_LOG_ROUNDS=12

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password

# Additional Configuration
DB_NAME=sustainatrend
SENTRY_DSN=your-sentry-dsn

# OpenAI Configuration (if needed)
OPENAI_API_KEY=your-api-key-here

# Admin Configuration
ADMIN_KEY=dev-admin-key-change-in-production 