# Database configuration
DATABASE_URL=postgresql://user:password@localhost:5432/sustainatrend
MONGODB_URL=mongodb://localhost:27017/sustainatrend
REDIS_URL=redis://localhost:6379

# API Keys
OPENAI_API_KEY=your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp

# Application settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Server configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# File upload settings
MAX_UPLOAD_SIZE=10485760

# AI Model settings
DEFAULT_MODEL=gpt-4
EMBEDDING_MODEL=text-embedding-ada-002
MAX_TOKENS=2000
TEMPERATURE=0.7

# Cache settings
CACHE_TTL=3600
CACHE_PREFIX=sustainatrend

# Logging configuration
LOG_LEVEL=INFO 
# Trendsense API settings
TRENDSENSE_API_KEY=your-trendsense-api-key
TRENDSENSE_API_URL=https://api.trendsense.ai/v1
