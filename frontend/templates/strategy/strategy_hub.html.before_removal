<script>
document.addEventListener('DOMContentLoaded', function() {
    // STEPPS Radar Chart
    const stepsCtx = document.getElementById('steppsRadarChart').getContext('2d');
    const steppsRadarChart = new Chart(stepsCtx, {
        type: 'radar',
        data: {
            labels: [
                {% for component in stepps_components %}
                '{{ stepps_components[component] }}',
                {% endfor %}
            ],
            datasets: [{
                label: 'Carbon Footprint Transparency',
                data: [
                    {% for component, data in trend_data.components.items() %}
                    {{ data.score * 10 }},
                    {% endfor %}
                ],
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 2
            }]
        },
        options: {
            scales: {
                r: {
                    angleLines: {
                        display: true
                    },
                    suggestedMin: 0,
                    suggestedMax: 100
                }
            }
        }
    });

    // Benchmark Bar Chart
    {% if benchmark_data %}
    const benchmarkCtx = document.getElementById('benchmarkBarChart').getContext('2d');
    const benchmarkBarChart = new Chart(benchmarkCtx, {
        type: 'bar',
        data: {
            labels: [{% for ranking in benchmark_data.overall_ranking.ranking %}'{{ ranking.name }}',{% endfor %}],
            datasets: [{
                label: 'Overall Virality Score',
                data: [{% for ranking in benchmark_data.overall_ranking.ranking %}{{ ranking.score }},{% endfor %}],
                backgroundColor: [
                    'rgba(75, 192, 192, 0.7)',
                    'rgba(153, 102, 255, 0.7)',
                    'rgba(255, 159, 64, 0.7)',
                    'rgba(255, 99, 132, 0.7)'
                ],
                borderColor: [
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)',
                    'rgba(255, 99, 132, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true,
                    max: 100
                }
            }
        }
    });
    {% endif %}
});
</script>
