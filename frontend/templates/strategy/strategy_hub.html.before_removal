<!-- Add JavaScript to handle the expandable cards -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Setup expandable cards
    const cards = [
        { 
            header: 'ai-strategy-header', 
            content: 'ai-strategy-content', 
            toggle: 'ai-strategy-toggle',
            actionBtn: 'add-strategy-btn'
        },
        { 
            header: 'compliance-header', 
            content: 'compliance-content', 
            toggle: 'compliance-toggle'
        },
        { 
            header: 'data-upload-header', 
            content: 'data-upload-content', 
            toggle: 'data-upload-toggle',
            actionBtn: 'upload-data-btn'
        },
        { 
            header: 'storytelling-header', 
            content: 'storytelling-content', 
            toggle: 'storytelling-toggle',
            actionBtn: 'create-story-btn'
        },
        { 
            header: 'trend-virality-header', 
            content: 'trend-virality-content', 
            toggle: 'trend-virality-toggle',
            actionBtn: 'analyze-trend-btn'
        },
        { 
            header: 'monetization-header', 
            content: 'monetization-content', 
            toggle: 'monetization-toggle'
        },
        { 
            header: 'ai-insights-header', 
            content: 'ai-insights-content', 
            toggle: 'ai-insights-toggle'
        }
    ];
    
    // Setup toggle functionality for each card
    cards.forEach(card => {
        const headerEl = document.getElementById(card.header);
        const contentEl = document.getElementById(card.content);
        const toggleBtn = document.getElementById(card.toggle);
        
        if (headerEl && contentEl && toggleBtn) {
            headerEl.addEventListener('click', function(e) {
                if (e.target !== toggleBtn && !toggleBtn.contains(e.target)) {
                    toggleCardExpansion(contentEl, toggleBtn);
                }
            });
            
            toggleBtn.addEventListener('click', function() {
                toggleCardExpansion(contentEl, toggleBtn);
            });
        }
        
        // Setup quick action buttons
        if (card.actionBtn) {
            const actionBtn = document.getElementById(card.actionBtn);
            if (actionBtn) {
                actionBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    // Expand the corresponding card
                    if (!contentEl.classList.contains('expanded')) {
                        toggleCardExpansion(contentEl, toggleBtn);
                    }
                    // Scroll to the card
                    document.getElementById(card.content).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            }
        }
    });
    
    // Toggle card expansion
    function toggleCardExpansion(contentEl, toggleBtn) {
        contentEl.classList.toggle('expanded');
        
        // Update the toggle button icon
        if (contentEl.classList.contains('expanded')) {
            toggleBtn.innerHTML = '<i class="fas fa-chevron-up"></i>';
        } else {
            toggleBtn.innerHTML = '<i class="fas fa-chevron-down"></i>';
        }
    }
    
    // Trend virality analyze button functionality
    const analyzeTrendBtn = document.getElementById('analyzeTrendBtn');
    const viralityResults = document.getElementById('viralityResults');
    
    if (analyzeTrendBtn && viralityResults) {
        analyzeTrendBtn.addEventListener('click', function() {
            // Loading state
            analyzeTrendBtn.disabled = true;
            analyzeTrendBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Analyzing...';
            
            // Get form data
            const trendName = document.getElementById('trendName').value;
            const trendDescription = document.getElementById('trendDescription').value;
            const industry = document.getElementById('industrySelect').value;
            
            // Simulate API call with timeout
            setTimeout(function() {
                // Make the actual API call
                fetch('/api/strategy-hub/analyze-trend-virality', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        trend_name: trendName,
                        trend_description: trendDescription,
                        industry: industry
                    })
                })
                .then(response => response.json())
                .then(data => {
                    // Display results
                    displayViralityResults(data);
                    
                    // Reset button
                    analyzeTrendBtn.disabled = false;
                    analyzeTrendBtn.innerHTML = '<i class="fas fa-chart-line me-2"></i> Analyze Trend Virality';
                })
                .catch(error => {
                    console.error('Error:', error);
                    // Display error
                    viralityResults.innerHTML = `
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i> 
                            Error analyzing trend. Please try again.
                        </div>
                    `;
                    viralityResults.classList.remove('d-none');
                    
                    // Reset button
                    analyzeTrendBtn.disabled = false;
                    analyzeTrendBtn.innerHTML = '<i class="fas fa-chart-line me-2"></i> Analyze Trend Virality';
                });
            }, 1500);
        });
    }
    
    // Function to display virality results
    function displayViralityResults(data) {
        if (!viralityResults) return;
        
        let html = `
            <h5 class="mb-3">STEPPS Analysis Results</h5>
            <div class="card bg-dark mb-4">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Overall Virality Score</h6>
                    <div class="d-flex align-items-center mb-2">
                        <div class="progress flex-grow-1 me-3" style="height: 8px;">
                            <div class="progress-bar bg-warning" role="progressbar" 
                                style="width: ${data.overall_score}%"></div>
                        </div>
                        <span class="fw-bold">${data.overall_score}%</span>
                    </div>
                    <p class="card-text">${data.summary}</p>
                </div>
            </div>
            
            <h6 class="mb-3">Component Breakdown</h6>
            <div class="row g-3">
        `;
        
        // Add STEPPS components
        for (const [key, value] of Object.entries(data.components)) {
            const componentName = key.charAt(0).toUpperCase() + key.slice(1).replace('_', ' ');
            html += `
                <div class="col-md-6">
                    <div class="card bg-dark h-100">
                        <div class="card-body">
                            <h6 class="card-title">${componentName}</h6>
                            <div class="d-flex align-items-center mb-2">
                                <div class="progress flex-grow-1 me-3" style="height: 6px;">
                                    <div class="progress-bar ${getScoreColorClass(value.score)}" role="progressbar" 
                                        style="width: ${value.score}%"></div>
                                </div>
                                <span>${value.score}%</span>
                            </div>
                            <p class="card-text small">${value.description}</p>
                        </div>
                    </div>
                </div>
            `;
        }
        
        html += `
            </div>
            
            <h6 class="mt-4 mb-3">Competitive Benchmarking</h6>
            <div class="table-responsive">
                <table class="table table-dark table-sm">
                    <thead>
                        <tr>
                            <th>Competitor</th>
                            <th>Industry</th>
                            <th>Virality Score</th>
                            <th>Relative Position</th>
                        </tr>
                    </thead>
                    <tbody>
        `;
        
        // Add benchmark data
        data.benchmarking.competitors.forEach(competitor => {
            html += `
                <tr>
                    <td>${competitor.name}</td>
                    <td>${competitor.industry}</td>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="progress flex-grow-1 me-2" style="height: 6px;">
                                <div class="progress-bar ${getScoreColorClass(competitor.score)}" role="progressbar" 
                                    style="width: ${competitor.score}%"></div>
                            </div>
                            <span>${competitor.score}%</span>
                        </div>
                    </td>
                    <td>${competitor.relative_position}</td>
                </tr>
            `;
        });
        
        html += `
                    </tbody>
                </table>
            </div>
            
            <div class="mt-4">
                <h6 class="mb-3">Recommendations</h6>
                <ul class="list-group">
        `;
        
        // Add recommendations
        data.recommendations.forEach(rec => {
            html += `
                <li class="list-group-item bg-dark">
                    <div class="d-flex w-100 justify-content-between">
                        <h6 class="mb-1">${rec.title}</h6>
                        <small class="text-primary">${rec.focus_area}</small>
                    </div>
                    <p class="mb-1">${rec.description}</p>
                </li>
            `;
        });
        
        html += `
                </ul>
            </div>
        `;
        
        viralityResults.innerHTML = html;
        viralityResults.classList.remove('d-none');
    }
    
    // Helper function to get color class based on score
    function getScoreColorClass(score) {
        if (score >= 75) return 'bg-success';
        if (score >= 50) return 'bg-warning';
        return 'bg-danger';
    }
    
    // Handle monetization strategy detail buttons
    const monetizationDetailBtns = document.querySelectorAll('.monetization-detail-btn');
    monetizationDetailBtns.forEach(btn => {
        btn.addEventListener('click', function() {
            const strategyId = this.getAttribute('data-strategy-id');
            // Call the API or show modal with details
            console.log(`Show details for strategy: ${strategyId}`);
            // In a real implementation, you would fetch details and show them in a modal
        });
    });
});
</script>

